<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/d_logout_button_layout_height">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/s_home_user_Name_text"
                android:textStyle="bold"
                android:textSize="@dimen/d_home_user_name_textSize"
                android:layout_marginTop="@dimen/d_home_user_name_marginTop"
                android:layout_marginLeft="@dimen/d_home_user_name_marginLeft"
                android:layout_marginStart="@dimen/d_home_user_name_marginLeft"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_user_logged_in"
                android:textSize="@dimen/d_home_user_name_textSize"
                android:textStyle="bold"
                android:layout_marginLeft="@dimen/d_home_user_name_marginLeft"
                android:layout_marginStart="@dimen/d_home_user_name_marginLeft"/>

        </LinearLayout>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/b_logout"
            android:text="@string/s_logout_button_text"
            android:layout_gravity="center"/>
    </LinearLayout>

    <android.support.v4.view.ViewPager
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/vp_slide">
        <android.support.design.widget.TabLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tl_tabs"
            app:tabMode="fixed"
            app:tabSelectedTextColor="@color/colorAccent"
            />
    </android.support.v4.view.ViewPager>

</LinearLayout>